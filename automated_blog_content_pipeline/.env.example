# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# LangSmith Configuration (Optional - for observability)
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=blog-content-pipeline
LANGSMITH_TRACING=true

# Tistory API Configuration
TISTORY_API_KEY=your_tistory_api_key_here
TISTORY_BLOG_NAME=your_blog_name

# Model Configuration
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.7
RESEARCH_MODEL=gpt-4-turbo-preview
RESEARCH_TEMPERATURE=0.3
CRITIC_MODEL=gpt-4-turbo-preview
CRITIC_TEMPERATURE=0.2

# Vector Store Configuration
VECTOR_STORE_TYPE=faiss  # or chroma
VECTOR_STORE_PATH=./data/vector_store
EMBEDDING_MODEL=text-embedding-3-small
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Pipeline Configuration
MAX_RESEARCH_ITERATIONS=3
MAX_WRITING_ITERATIONS=2
MAX_CRITIC_ITERATIONS=2
FACT_CONFIDENCE_THRESHOLD=0.8
ENABLE_MANUAL_APPROVAL=false

# Content Configuration
TARGET_WORD_COUNT=1500
MIN_WORD_COUNT=800
MAX_WORD_COUNT=3000

# Publishing Configuration
PUBLISH_MODE=draft  # draft or publish
AUTO_PUBLISH=false
DEFAULT_CATEGORY=Tech
DEFAULT_TAGS=["AI", "Tech", "Tutorial"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/pipeline.log